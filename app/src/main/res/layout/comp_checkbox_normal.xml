<!-- res/layout/trans_info_item.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/icon"
            android:layout_width="@dimen/icSizeXs"
            android:layout_height="@dimen/icSizeXs"
            android:background="@drawable/shape_checkbox"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/label"
            style="@style/BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/confirm_operation_label"
            android:textColor="@color/dark_theme_white" />
    </LinearLayout>
</layout>