<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="11dp">

        <ImageView
            android:layout_width="@dimen/icSizeXl"
            android:layout_height="@dimen/icSizeXl"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/send_coins__item_coin_value"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:src="@drawable/coin_btc_rounded" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:letterSpacing="-0.025"
                android:text="@string/send_coins__item_coin_value"
                android:textColor="@color/dark_theme_white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:letterSpacing="-0.025"
                android:text="@string/send_coins__title"
                android:textColor="@color/dark_theme_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="end"
                android:letterSpacing="-0.025"
                android:text="@string/main_balance_btc__value"
                android:textColor="@color/dark_theme_white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_balance_btc__fiat_amount"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_theme_gray" />

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4sp"
                    android:text="@string/main_balance_btc__fiat_currency"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_theme_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_theme_divider"
        android:gravity="bottom" />
</LinearLayout>