<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_rounded_icon_wrapper"
            android:contentDescription="@string/img_content_arrow_back"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="-0.025"
            android:lineSpacingExtra="18.75sp"
            android:text="@string/transaction_info__title"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="16.8sp"
                android:text="@string/transaction_info__item_send_from_label"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="16.8sp"
                android:text="@string/transaction_info__item_send_from_value"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="16.8sp"
                android:text="@string/transaction_info__item_send_where_label"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="16.8sp"
                android:text="@string/transaction_info__item_send_where_value"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="16.8sp"
                android:text="@string/transaction_info__item_amount_label"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="16.8sp"
                android:text="@string/transaction_info__item_amount_value"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="16.8sp"
                android:text="@string/transaction_info__item_time_label"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="16.8sp"
                android:text="@string/transaction_info__item_time_value"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
<!--   Rewrite uses Root Constraint Layout     -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="470dp"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="12.5dp"
                android:text="@string/transaction_info__check_btn_label"
                android:background="@color/purple_700"
                android:textColor="@color/white"
               />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>