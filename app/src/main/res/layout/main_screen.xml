<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_theme_green"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_upper_background"
            android:paddingTop="4dp"
            android:paddingBottom="18dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/main__title"
                android:textColor="@color/dark_theme_white"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--   Trailing icon     -->
            <!--        <ImageButton-->
            <!--            android:id="@+id/imageButton"-->
            <!--            android:background="@drawable/btc_icon_rounded"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:contentDescription="@string/content_descr__bitcoin_icon"-->
            <!--            app:layout_constraintBottom_toBottomOf="parent"-->
            <!--            app:layout_constraintEnd_toEndOf="parent"-->
            <!--            app:layout_constraintTop_toTopOf="parent"/>-->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/main_balance__title"
                android:textColor="@color/dark_theme_gray"
                android:textSize="14sp"
                android:lineSpacingExtra="16.8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/main_balance__value"
                android:textColor="@color/dark_theme_white"
                android:textSize="32sp"
                android:gravity="start"
                android:layout_gravity="center"
                />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/main_balance__currency"
                        android:textColor="@color/dark_theme_white"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="8dp"
                        android:textSize="12sp"
                        android:lineSpacingExtra="16dp"
                        android:background="@drawable/shape_action_icon_wrapper"
                        android:letterSpacing="0.005"
                        android:layout_marginStart="40dp"
                        android:gravity="end"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_lower_background"
        android:paddingTop="20dp"
        android:layout_marginTop="2dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="7.5dp"
                android:paddingVertical="13dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_action_icon_wrapper"
                android:gravity="center"
                android:translationZ="100dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="28dp"
                    android:height="28dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_send_green"
                    android:contentDescription="@string/quick_actions__buy"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/quick_actions__get"
                    android:textColor="@color/dark_theme_green"
                    android:textStyle="normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="7.5dp"
                android:paddingVertical="13dp"
                android:background="@drawable/shape_action_icon_wrapper"
                android:gravity="center"
                android:layout_marginEnd="12dp"
                android:translationZ="100dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="28dp"
                    android:height="28dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_receive_green"
                    android:contentDescription="@string/quick_actions__buy"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/quick_actions__send"
                    android:textColor="@color/dark_theme_green"
                    android:textStyle="normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="7.5dp"
                android:paddingVertical="13dp"
                android:background="@drawable/shape_action_icon_wrapper"
                android:gravity="center"
                android:translationZ="100dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="28dp"
                    android:height="28dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_exchange_green"
                    android:contentDescription="@string/quick_actions__exchange"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/quick_actions__exchange"
                    android:textColor="@color/dark_theme_green"
                    android:textStyle="normal"
                    />
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/coin_btc_rounded"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@color/dark_theme_gray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/send_coins__item_coin_value"
                    android:textColor="@color/dark_theme_white"
                    android:textSize="16sp"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/send_coins__title"
                        android:textColor="@color/dark_theme_gray"
                        android:textSize="16sp"
                        android:letterSpacing="-0.025"
                        android:layout_gravity="end"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:gravity="bottom"
            >
            <Button
                style="@style/GhostBtn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/main_balance__btn"
                android:layout_gravity="bottom"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>