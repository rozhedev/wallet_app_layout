<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Wallet_app" parent="android:Theme.Material.Light"/>

    <!--  Transaction Info Item  -->
    <style name="LayoutTransInfoItem">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">16.8sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">@color/dark_theme_white</item>
    </style>
    <!-- UI Appearance -->
    <style name="HeaderActionIconLeft">
        <item name="android:background">@drawable/shape_darkgreen_rounded12</item>
        <item name="android:padding">12dp</item>
    </style>
    <!-- Heading 1 -->
    <style name="Heading1" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!-- Heading 2 -->
    <style name="Heading2" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">19sp</item>
    </style>
    <!-- Heading3 (Bold text, text Appearance for App Title) -->
    <style name="AppTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:lineSpacingExtra">18.75sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Heading3 -->
    <style name="Heading3" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/dark_theme_white</item>
    </style>

    <!--  Body  -->
    <style name="Body_LineSpace" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">16.8sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_theme_white</item>
    </style>
    <style name="Body" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_theme_white</item>
    </style>
    <!--  Body small  -->
    <style name="BodySmall" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_theme_white</item>
    </style>
    <!--  Caption  -->
    <style name="Caption" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:lineSpacingExtra">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_theme_white</item>
    </style>
    <!--  CaptionSmall  -->
    <style name="CaptionSmall" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/dark_theme_gray</item>
    </style>

    <!--  Divider  -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dark_theme_divider</item>
    </style>

    <!-- Button Appearance -->
    <!-- Ghost btn   -->
    <style name="GhostBtn" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">18.75sp</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textColor">@color/dark_theme_white</item>
        <item name="android:background">@drawable/shape_ghost_btn</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- Primary btn   -->
    <style name="PrimaryBtn" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/dark_theme_white</item>
        <item name="android:background">@drawable/shape_primary_btn</item>
        <item name="android:text">@string/send_coins__send_btn_label</item>
        <item name="android:textColor">@color/dark_theme_black</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--  Disabled btn  -->
    <style name="DisabledBtn" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/dark_theme_white</item>
        <item name="android:background">@drawable/shape_disabled_btn</item>
        <item name="android:text">@string/send_coins__send_btn_label</item>
        <item name="android:textColor">@color/dark_theme_black</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--  Items screens  -->
    <style name="CreateWalletItem">
        <item name="android:layout_width">308dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@drawable/shape_darkgreen_rounded12</item>
    </style>
    <style name="CreateWalletItemImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">52dp</item>
        <item name="android:maxHeight">52dp</item>
    </style>

    <style name="SliderDot_Active">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/shape_slider_dot_active</item>
    </style>
    <style name="SliderDot">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:background">@drawable/shape_slider_dot</item>
    </style>

    <!-- Button behavior -->
    <style name="BtnBehavior" parent="Widget.AppCompat.Button">
        <item name="android:layout_weight">0.33</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/dark_theme_black</item>
    </style>

    <style name="BtnAppPassNumber">
        <item name="android:textColor">@color/dark_theme_white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">9dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">3dp</item>
        <item name="android:lineSpacingExtra">39dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Popup styles -->
    <style name="PopupContainer">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/shape_darkgreen_rounded18</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

        <!-- Switch   -->
    <style name="Theme.BitcoinJ"  parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="colorPrimary">@color/dark_theme_white</item>
        <item name="colorPrimaryDark">@color/dark_theme_white</item>
        <item name="colorAccent">@color/dark_theme_white</item>
    </style>
    <style name="SetBackgroundSwitch">
        <item name="android:background">@drawable/switch_green_off_light</item>
    </style>
    <style name="iOSSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumbTint">@color/dark_theme_white</item>
        <item name="android:thumb">@drawable/switch_thumb_ios</item>
        <item name="android:thumbTextPadding">0dp</item>
        <item name="android:switchMinWidth">0dp</item>
        <item name="android:switchPadding">0dp</item>
    </style>
</resources>