<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Wallet_app" parent="android:Theme.Material.Light" />

    <!--  Transaction Info Item  -->
    <style name="LayoutTransInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">@color/dark_theme_white</item>
    </style>
    <!-- UI Appearance -->
    <style name="HeaderActionIconLeft">
        <item name="android:background">@drawable/shape_action_icon_wrapper</item>
        <item name="android:padding">12dp</item>
    </style>
    <!-- Text Appearance for App Title -->
    <style name="AppTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:lineSpacingExtra">18.75sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--  Transaction Info Item  -->
    <style name="TransInfoItem" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">16.8sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_theme_white</item>
    </style>

    <!--  Divider  -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dark_theme_divider</item>
    </style>

    <!-- Button Appearance -->
    <style name="GhostBtn" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">18.75sp</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textColor">@color/dark_theme_white</item>
        <item name="android:background">@drawable/shape_ghost_btn</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Primary btn   -->
    <style name="PrimaryBtn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_primary_btn</item>
        <item name="android:text">@string/send_coins__send_btn_label</item>
        <item name="android:textColor">@color/dark_theme_black</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>