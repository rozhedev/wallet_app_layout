<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_theme_black"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_ellipse_blurred_top__tablet" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_ellipse_blurred_bottom__tablet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/contMarginTablet"
                android:layout_marginTop="102dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="398dp"
                    android:layout_height="516dp"
                    android:src="@drawable/img_onboarding_splash" />

                <TextView
                    style="@style/Heading3__Tablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="96dp"
                    android:paddingHorizontal="12dp"
                    android:text="@string/welcome__descr"
                    android:textAlignment="center" />

                <TextView
                    style="@style/BodySmall__Tablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingHorizontal="12dp"
                    android:text="@string/onboarding__notice"
                    android:textAlignment="center"
                    android:textColor="@color/dark_theme_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/bottomContMarginTablet"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <Button
                        style="@style/PrimaryBtn__Tablet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btnNormalHeightTablet"
                        android:layout_gravity="bottom"
                        android:text="@string/onboarding__create_btn_label" />

                    <Button
                        style="@style/GhostBtn__Tablet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btnNormalHeightTablet"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="18dp"
                        android:text="@string/onboarding__import_btn_label" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>