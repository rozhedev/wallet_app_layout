<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_theme_black"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_ellipse_blurred_top__tablet" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_ellipse_blurred_bottom__tablet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_primary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/contMarginTablet"
                android:layout_marginTop="168dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="573dp"
                    android:src="@drawable/img_welcome_splash" />

                <TextView
                    style="@style/Heading3__Tablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="108dp"
                    android:paddingHorizontal="12dp"
                    android:text="@string/welcome__descr"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/m_42"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <Button
                        style="@style/PrimaryBtn__Tablet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btnNormalHeightTablet"
                        android:layout_gravity="bottom"
                        android:text="@string/welcome__btn_label" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>