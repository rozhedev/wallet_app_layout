<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="@dimen/icSizeMdTablet"
                    android:layout_height="@dimen/icSizeMdTablet"
                    android:background="@drawable/shape_icon_overlay_darkgreen"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/icSizeXsTablet"
                        android:layout_height="@dimen/icSizeXsTablet"
                        android:src="@drawable/ic_add_circle_green"
                        android:contentDescription="@string/coin_dash__item_title_buy"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="13dp">
                    <TextView
                        style="@style/Caption__Tablet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coin_dash__item_title_buy"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.5dp">
                        <TextView
                            style="@style/CaptionSmall__Tablet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coin_dash__item_to"/>
                        <TextView
                            style="@style/CaptionSmall__Tablet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coin_dash__item_recipient"
                            android:layout_marginStart="9dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="end"
                android:orientation="vertical">
                <TextView
                    style="@style/Caption__Tablet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coin_dash__item_amount"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>