<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/container">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="11dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin_btc_rounded"
                android:minWidth="@dimen/icSizeXlTablet"
                android:minHeight="@dimen/icSizeXlTablet"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/send_coins__item_coin_value" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/send_coins__item_coin_value"
                    android:textColor="@color/dark_theme_white"
                    android:textSize="24sp"
                    android:letterSpacing="-0.025"
                    android:gravity="start"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/send_coins__title"
                    android:textColor="@color/dark_theme_gray"
                    android:textSize="24sp"
                    android:letterSpacing="-0.025"
                    android:gravity="start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginStart="12sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_balance_btc__value"
                    android:textColor="@color/dark_theme_white"
                    android:textSize="24sp"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="start"
                    android:gravity="end"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">
                    <TextView
                        style="@style/Body__Tablet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_balance_btc__fiat_amount"
                        android:textColor="@color/dark_theme_gray"
                        android:textAlignment="textEnd"/>
                    <TextView
                        style="@style/Body__Tablet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_balance_btc__fiat_currency"
                        android:textColor="@color/dark_theme_gray"
                        android:textAlignment="textEnd"
                        android:layout_marginStart="6sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/dark_theme_divider"
            android:gravity="bottom"/>
    </LinearLayout>
</LinearLayout>