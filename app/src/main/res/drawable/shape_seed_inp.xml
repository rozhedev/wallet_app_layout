<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent" />

    <!-- Серый цвет -->
    <stroke
        android:width="1dp"
        android:color="@color/dark_theme_divider" />

    <!-- Устанавливаем отступы, чтобы убрать границу сверху, слева и справа -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="-1dp" />

    <!-- Высота нижней линии -->
    <size android:height="1dp" />
</shape>